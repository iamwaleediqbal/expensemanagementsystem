
<!-- Section: Design Block -->
<section class=" shadow-lg">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            The best tool <br />
            <span class="text-primary">for your expenses</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Monthlytrack is an expense tracker tool for all of 
            your monthly spendings either with spent with groups
            or individual expenses.
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


                  <div class="d-flex align-items-center mb-3 pb-1">
                  <%= image_tag("logo.png", size: "160", class: 'mx-auto') %>

                  </div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
  
                  <div class="form-outline mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control ' %>
                    <%= f.label :email, class: 'form-label' %>
                  </div>
  
                  <div class="form-outline mb-4">
                    <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: 'form-control ' %>
                    <%= f.label :password, class: 'form-label' %>
                  </div>
                  
                  
                  <% if devise_mapping.rememberable? %>
                    <div class="form-check d-flex justify-content-center mb-4">
                      <%= f.check_box :remember_me, class: 'form-check-input' %>
                      <%= f.label :remember_me, class: 'form-check-label p-1' %>
                    </div>
                  <% end %>
                  <div class="pt-1 mb-4">
                    <%= f.button :login, class: 'text-capitalize btn btn-primary btn-block mb-4' %>
                  </div>
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                      Don't have an account? 
                      <%= link_to "Register here", new_registration_path(resource_name), class: 'text-primary' %>
                  <% end %>
                  <br>
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'small text-muted' %><br />
                  <% end %>
                 
               

                
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->