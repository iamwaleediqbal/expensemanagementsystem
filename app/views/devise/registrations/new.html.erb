
<!-- Section: Design Block -->
<section class=" shadow-lg">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            The best tool <br />
            <span class="text-primary">for your expenses</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Monthlytrack is an expense tracker tool for all of 
            your monthly spendings either with spent with groups
            or individual expenses.
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
                
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


                  <div class="d-flex align-items-center mb-3 pb-1">
                  <%= image_tag("logo.png", size: "160", class: 'mx-auto') %>

                  </div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
  
                  <div class="form-outline mb-4">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control ' %>
                    <%= f.label :name, class: 'form-label' %>
                  </div>
                  
                  <div class="form-outline mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control ' %>
                    <%= f.label :email, class: 'form-label' %>
                  </div>
  
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                        <%= f.label :password, class: "form-label" %>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <% if @minimum_password_length %>
                          <em></em>
                        <% end %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
                        <%= f.label :password_confirmation, class: "form-label" %><br />
                      </div>
                    </div>
                  </div>
                  
                  <div class="pt-1 mb-4">
                    <%= f.button :Signup, class: 'text-capitalize btn btn-primary btn-block mb-4' %>
                  </div>
                  <%- if controller_name != 'sessions' %>
                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                      Already have an account? 
                      <%= link_to "Login here",  new_session_path(resource_name), class: 'text-primary' %>
                  <% end %>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
