<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table class = "table table-striped table-bordered table-hover table-sm" border="10" width = "500">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= current_user ==group.creator ? (link_to 'Add Members', group, class: 'btn btn-success' ): " "%></td>
        <td><%= current_user ==group.creator ? (link_to 'Edit Group Name', edit_group_path(group), class: 'btn btn-primary'): " " %></td>
        <td><%= current_user ==group.creator ? (link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'): " " %></td>
        <td><%= link_to 'Show Group Expenses', group_group_expenses_path(group), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path ,class: " large btn btn-primary btn-floating btn-custom"%>
