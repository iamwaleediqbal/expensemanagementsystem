<p id="notice"><%= notice %></p>

<h1>Bank Accounts</h1>
<table class = "table" border="10" width = "500">
  <thead>
    <tr>
      <th scope = "col">Name</th>
      <th scope = "col">Account number</th>
      <th scope = "col">Balance</th>
      <th scope = "col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= paginate @bank_accounts%>
    <% @bank_accounts.each do |bank_account| if(bank_account.user_id.to_s != bank_account.account_number)  %>
      <tr>
        <td><%= bank_account.name %></td>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.balance %></td>
        <td><%= link_to 'Show', bank_account, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end end%>
  </tbody>
</table>

<br>
<%= button_to 'Add New Bank Account', new_bank_account_path,class: " large btn btn-primary btn-floating btn-custom",:method => :get %>
<br>
